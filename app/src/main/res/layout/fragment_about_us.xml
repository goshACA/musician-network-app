<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGreyBackground">

    <LinearLayout
        android:id="@+id/layout_start_activity_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/label_activity_start_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/carambola" />

        <com.musapp.musicapp.ui_custom_views.LogoTextView
            android:id="@+id/text_activity_start_logo_text"
            style="@style/LogoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_start_activity_logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/about_us_info_text"
            android:textColor="@color/lightBlue"
            android:background="@color/colorGreyCards"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/about_us_email_link"
            android:textColor="@color/lightBlue"
            android:background="@color/colorGreyCards"
            android:autoLink="email"
            android:textSize="20sp"
            android:id="@+id/text_about_us_fragment_email_link"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingStart="100dp"
            android:layout_marginTop="10dp"
            android:text="@string/about_us_git_link"
            android:textColor="@color/lightBlue"
            android:background="@color/colorGreyCards"
            android:autoLink="email"
            android:textSize="20sp"
            android:id="@+id/text_about_us_fragment_git_link"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/carambola_copyright"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:textColor="@color/lightBlue"
        />
</android.support.constraint.ConstraintLayout>