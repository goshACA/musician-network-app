<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background"
    tools:context=".activities.StartActivity">

    <include layout="@layout/layout_registration_part_1"
        android:id="@+id/layout_1"/>
    <include layout="@layout/layout_registration_part_2"
        android:id="@+id/layout_2"
        android:visibility="gone"/>

    <Button
        android:id="@+id/action_fragment_grid_and_profession_next"
        style="@style/NextButtonStyle"
        android:layout_width="@dimen/button_width_registration_button"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:text="@string/login_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>


</android.support.constraint.ConstraintLayout>