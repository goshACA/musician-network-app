<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_email_info"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_dialog_forgot_pass_email"
        android:hint="@string/email"/>
        <EditText
            android:layout_width="@dimen/edit_text_min_weight"
            android:layout_height="wrap_content"
            android:hint="@string/enter_code"
            android:id="@+id/text_dialog_forgot_pass_code"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:background="@android:color/transparent"
            android:id="@+id/action_dialog_forgot_pass_confirm"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sent_again"
                android:id="@+id/action_dialog_forgot_pass_sent_again"
                android:background="@android:color/transparent"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>