<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyDatePickerSpinnerStyle" parent="@android:style/Widget.DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="colorControlNormal">@color/darkPurple</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/darkPurple</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/textBlue</item>
        <item name="android:textColorHint">@color/textBlue</item>
        <item name="editTextStyle">@style/DefaultEditText</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LogoStyle">
        <item name="android:text">@string/app_name</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#b7d6ef</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="NextButtonStyle">
        <!--<item name="android:background">@android:color/transparent</item>-->
        <item name="android:background">@drawable/button_backgrount</item>
        <!--<item name="android:textColor">@color/darkPurple</item>-->
        <item name="android:textColor">@color/lightBlue</item>
        <item name="android:text">@string/next</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DefaultEditText" parent="@android:style/Widget.EditText">
        <item name="android:colorAccent">@color/darkPurple</item>
        <item name="colorControlNormal">@color/darkPurple</item>
        <item name="android:colorControlActivated">@color/lightBlue</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="InfoBoxTextStyle">
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/user_profile_info_text_margin_top</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorDarkPrimaryText</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
